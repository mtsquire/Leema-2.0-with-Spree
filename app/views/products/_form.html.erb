<div class="container form">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
          <%= form_for @product, :html => {:class => 'well'} do |f| %>
            <% if @product.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@product.errors.count, "error") %> prohibited
                  this product from being saved:</h2>
                <ul>
                <% @product.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
                </ul>
              </div>
            <% end %>
              <p>
                <%= f.label :title %><br>
                <%= f.text_field :title, class: 'form-control input_wide', :placeholder => "What are you selling? (140 characters or less)" %>
              </p>
                <%= f.label :price %><br>
                <div class="input-group col-sm-4">
                  <span class="input-group-addon">$</span>
                  <%= f.text_field :price, data: { role: 'money', a_sep: ',', a_dec: '.' }, class: 'form-control' %>
                </div>
              </p>
             
              <p>
                <%= f.label :description %><br>
                <%= f.text_area :description, class: 'form-control input_wide', :placeholder => "Tell us more about your product. What's special about this?" %>
              </p>
              <p>
                <%= f.file_field :photo %>
              </p>
              <p>
                <%= f.submit %>
              </p>
            <% end %>
        
      </div>
    </div>
  </div>