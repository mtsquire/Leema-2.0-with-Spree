<% cache [current_currency, @product] do %>


  <div data-hook="product_show" itemscope itemtype="http://schema.org/Product">
    <% @body_id = 'product-details' %>
    <div class="row" id="product-info-page">
      <div class="col-sm-6" data-hook="product_left_part">
        <div data-hook="product_left_part_wrap">

          <div id="product-images" data-hook="product_images">
            <div id="main-image" data-hook>
              <div class="text-center">
                <%= render :partial => 'image' %>
              </div>
            </div>
            <div id="thumbnails" data-hook>
              <%= render :partial => 'thumbnails' %>
            </div>
          </div>

          <div data-hook="product_properties">
            <%= render :partial => 'properties' %>
          </div>

          <div data-hook="promotions">
            <%= render :partial => 'promotions' %>
          </div>

        </div>
      </div>

      <div class="col-sm-6" data-hook="product_right_part">
        <div data-hook="product_right_part_wrap">

          <h1 class="product-title" itemprop="name"><%= accurate_title %></h1>

          <div id="product-description" data-hook="product_description">

            <div itemprop="description" data-hook="description">
              <%= @product.leema_description %>
            </div>

            <div id="cart-form" data-hook="cart_form">
              <%= render :partial => 'cart_form' %>
            </div>

            <div id="custom-order">
              <a href="#" class="btn btn-info" data-toggle="modal" data-target="#customOrder">Custom Order</a>
              <div class="modal fade" id="customOrder" tabindex="-1" role="dialog" aria-labelledby="customOrder" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                      <h4 class="modal-title" id="exampleModalLabel">Leema Custom Order</h4>
                    </div>
                    <div class="modal-body">
                      <form>
                        <div class="form-group">
                          <label for="quantity" class="control-label">Quantity:</label>
                          <input type="number" value="1" class="form-control" id="quantity">
                        </div>
                        <div class="form-group">
                          <label for="message-text" class="control-label">Description:</label>
                          <textarea class="form-control" id="message-text"></textarea>
                        </div>
                        <div class="form-group">
                          <label for="exampleInputFile">Photo</label>
                          <input type="file" id="exampleInputFile">
                          <p class="help-block">Photo should be at least 500px by 500px.</p>
                        </div>
                      </form>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                      <button type="button" class="btn btn-primary">Send Custom Order</button>
                    </div>
                  </div>
                </div>
              </div><!-- close .modal -->
            </div><!-- close #custom-order -->

          </div><!-- close .produt-description -->

          <%= render :partial => 'taxons' %>

        </div>
      </div>
    </div>
  </div>
<% end %>

