<div class="row">
  <div class="col-md-6 col-xs-12">
    <%= form_for review, :url => product_reviews_path(product), :html => {:method => :post} do |f| %>
      <%= render "spree/shared/error_messages", :target => review %>

      <div class="form-group review_rating_field">
        <%= f.label :rating %> <span class="required">*</span>
        <%= render "spree/reviews/stars", :stars => review.rating, :edit_enabled => true %>
      </div>

      <div class="review_title_field form-group">
        <%= f.label :title %><br />
        <%= f.text_field :title, :maxlength => "255", :class => 'form-control', :size => "50" %>
      </div>

      <div class="review_review_field form-group">
        <%= f.label :review %> <span class="required">*</span><br />
        <%= f.text_area :review, :wrap => "virtual", :class => 'form-control text-area', :rows => "10", :cols => "50" %>
      </div>

      <div class="review_submit">
        <%= f.submit Spree.t(:submit_your_review), :class => "btn btn-primary" %>
      </div>
    <% end %>
  </div><!-- close .col-md-6 .col-xs-12 -->
</div><!-- close .row -->