	<div class="container">
		<div class="row">
			<div class="col-xs-12 text-center">
				<h2>Start eating today.</h2>
				<%= link_to "Get Started", spree_path, class: "btn btn-primary" %>
			</div>
		</div><!-- close .row -->
	</div><!-- close .container -->
