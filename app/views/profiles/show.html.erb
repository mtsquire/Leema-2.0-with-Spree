<body>
  <div class="section-cover">
    <img class="section-cover-image img-responsive" src="http://placehold.it/2000x580">

  </div>
  <div class="container">
    <div class="row">
      <div class="pull-right">
        <% if @user == current_user %>
        <%= link_to "Edit Profile", edit_path(@user) %>
        <% end %>
      </div>
      <div class="col-sm-4">
        <div class="profile-image">
          <%= image_tag @user.gravatar_url, class: 'center-block img-thumbnail img-responsive' %>
        </div>
        <h3><%= @user.full_name %></h3>
        <p class="text-muted"><i class="fa fa-map-marker"></i>  <%= @user.city %>, <%= @user.state %></p>
        <p class="text-muted"><i class="fa fa-clock-o"></i> Joined <%= @user.created_at.strftime('%B %Y') %></p>
        <p class="text-muted"><%= @user.products.count %> Products Listed</p>
      </div>

      <div class="col-sm-8">
        <div class="about-user"><%= @user.about %></div>
      </div>

    </div><!-- close .row -->
  </div><!-- close .container -->

  <div class="container products">
    <div class="row">
      <div class="col-xs-12">
        <div class="page-header">
          <h3>Products</h3>
        </div>

        <% @user.products.each do |product| %>
          <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
              <%= link_to image_tag(product.photo.url), controller: 'products', action: 'show', id: product %>
              <div class="caption">
                <h3><%= product.name %></h3>
                <% if current_user == product.user %>
                  <p><em>You posted this product <%= time_ago_in_words(product.created_at) %> ago.</em></p>
                  <p><%= link_to t('.edit', :default => t("helpers.links.edit")),
                              edit_product_path(product), :class => 'btn btn-default btn-xs' %>
                  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                              product_path(product),
                              :method => :delete,
                              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                              :class => 'btn btn-xs btn-danger' %></p>
                <% else %>
                  <p><em><%= humanized_money_with_symbol product.price %></em></p>
                  <p><%= link_to "Add to cart", product_path(product), class: 'btn btn-primary' %></p>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>

      </div><!-- close .col-xs-12 -->
    </div><!-- close .row -->
  </div><!-- close .container -->




</body>
